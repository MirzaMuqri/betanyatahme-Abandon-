<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Betanyatah &bullet; Notifications</title>
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/phone-mode.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script
        type="text/javascript"> (function () { var css = document.createElement('link'); css.href = 'https://use.fontawesome.com/releases/v5.1.0/css/all.css'; css.rel = 'stylesheet'; css.type = 'text/css'; document.getElementsByTagName('head')[0].appendChild(css); })(); </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/barba.js/1.0.0/barba.min.js"></script>
    <script src="js/post-func.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.js"></script>
</head>

<body>

    <div class="phone-mode">
        <div id="barba-wrapper">

            <!-- TRANSITIONS CHANGE -->
            <div class="barba-container homepage bell">

                <!-- HEADER NAV -->
                <div class="nav-header">
                    <p>Notifications</p>
                </div>
                <!-- HEADER NAV END-->

                <!-- CONTENT START -->
                <div class="content">

                    <!-- Notifications Start-->
                    <div class="notifications" style="margin-bottom: 100px;">

                        <% if (bell.length == 0) { %>
                        <div class="notifications-container">
                            <a href="#">
                                <div class="notifications-pic">
                                    <div class="pic"
                                        style="background-image: url('./img/bell.png'); background-color: #e34125;">

                                    </div>
                                </div>
                                <div class="notifications-content">
                                    <div class="content">
                                        <p class="not-type">You have no notifications.</p>
                                        <p class="date"><i class="fas fa-calendar-alt"></i> 00/00/000, 00:00PM</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <% } else { %>
                        <% bell.forEach( (bell) => { %>
                        <%     if (bell.bell_type === 0) { %>
                        <div class="notifications-container">
                            <a href="/u/<%= username %>/q/<%= bell.q_id %>">
                                <div class="notifications-pic">
                                    <div class="pic"
                                        style="background-image: url('./img/bell.png'); background-color: #FFC107;">

                                    </div>
                                </div>
                                <div class="notifications-content">
                                    <div class="content">
                                        <p class="not-type">A-Non gave you a star.</p>
                                        <p class="date"><i class="fas fa-calendar-alt"></i>
                                            <%= moment(parseInt(bell.bell_time)).format('DD/MM/YYYY , hh:mm A') %></p>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <%     } else { %>
                        <div class="notifications-container">
                            <a href="/u/<%= username %>/q/<%= bell.q_id %>">
                                <div class="notifications-pic">
                                    <div class="pic"
                                        style="background-image: url('./img/bell.png'); background-color: #2196F3;">

                                    </div>
                                </div>
                                <div class="notifications-content">
                                    <div class="content">
                                        <p class="not-type">A-Non asked you a questions.</p>
                                        <p class="date"><i class="fas fa-calendar-alt"></i>
                                            <%= moment(parseInt(bell.bell_time)).format('DD/MM/YYYY , hh:mm A') %></p>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <% } %>
                        <% }); %>
                        <% } %>

                    </div>
                    <!-- Notifications End -->

                </div>
                <!-- CONTENT END-->

                <!-- STICKY NAV -->
                <div class="sticky-bottom-nav">
                    <div class="column">
                        <a href="/"><i class="fas fa-home"></i></a>
                    </div>
                    <div class="column">
                        <a id="active" href="#"><i class="fas fa-bell"></i></a>
                    </div>
                    <div class="column">
                        <a href="/search"><i class="far fa-question-circle"></i></a>
                    </div>
                    <div class="column">
                        <a href="/u/<%= username %>"><i class="fas fa-user"></i></a>
                    </div>
                    <div class="column">
                        <a href="/settings"><i class="fas fa-cogs"></i></a>
                    </div>
                </div>
                <!-- STICKY NAV END-->

            </div>
            <!-- TRANSITIONS CHANGE END-->

        </div>
    </div>

    <script src="js/barba.js"></script>
</body>

</html>